<% active_nav_item :blog %>
<%= content_for :header, 'small-header' %>
<%= content_for :title, "Read articles on the latest tech on Coder Factory's blog" %>
<%= content_for :description, "Catch up on a range of coding and technology issues and news on the Coder Factory blog. Our team of bloggers are passionate about all things tech and love to bring you the latest. " %>

<div class="container">
	<div class="row">
		<div class="col-md-7 col-md-offset-1">
			<h2 class="page-title">Coder Factory Blog</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-7 col-md-offset-1">
			<% @posts.each_with_index do |post, index| %>
				<div class="thumbnail choose-course">
				  <a href="/posts/<%= post.slug %>"><img src="<%= post.image %>" alt="<%= post.title %>" ></a>
				  <div class="caption">
				    <h3><a href="/posts/<%= post.slug %>"><%= post.title %> </a></h3>
				    <p><span class="phone-inverse"><%= post.lead %></span></p>
		       	<div class="row">
		       		<div class="col-xs-3">
		        		<p><a href="/posts/<%= post.slug %>" class="btn btn-info btn-block">Read <i class="fa fa-arrow-right"></i> </span></a></p>
		        	</div>
				    </div>
		      </div>
		    </div>
			<% end %>
			<div class="apple_pagination">
				<%= will_paginate @posts %>
			</div>
		</div>
		<div class="col-md-3 promo-boxes">
      <%= render 'layouts/sideboxes' %>
    </div>
	</div>
</div>