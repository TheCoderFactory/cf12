 <%= content_for :header, 'small-header' %>
  <div class="row">
    <div class="col-xs-12 col-lg-offset-2 col-lg-8">
      <h2>Testimonials</h2>
      <div class="panel panel-default"><div class="panel-body">
      <p id="notice"><%= notice %></p>


<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Image</th>
      <th>Publish</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= Shoppe::Product.find(testimonial.product_id).name %></td>
        <td><%= testimonial.name %></td>
        <td><%= testimonial.image %></td>
        <td><%= testimonial.publish %></td>
        <td><%= testimonial.gender %></td>
        <td><%= link_to 'Show', testimonial %></td>
        <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimonial', new_testimonial_path %>
