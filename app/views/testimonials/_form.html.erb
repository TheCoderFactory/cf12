<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id, collection: @products %>
    <%= f.input :name %>
    <%= f.input :one_line %>
    <%= f.input :content %>
    <%= f.input :image %>
    <%= f.input :publish %>
    <%= f.input :gender, collection: ['M', 'F'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
