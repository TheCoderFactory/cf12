 <%= content_for :header, 'small-header' %>
 <p id="notice"><%= notice %></p>
       
  <div class="row">
    <div class="col-xs-12 col-lg-offset-2 col-lg-8">
      <h2>Registrations <small><span class="label label-default"><%= @course_registrations.count %></span></small></h2>
      <div class="panel panel-default"><div class="panel-body">


<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Country</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_registrations.each do |course_registration| %>
      <tr>
        <td><%= course_registration.first_name %></td>
        <td><%= course_registration.country %></td>
        <td><%= course_registration.email %></td>
        <td><%= link_to 'Show', course_registration %></td>
        <td><%= link_to 'Edit', edit_course_registration_path(course_registration) %></td>
        <td><%= link_to 'Destroy', course_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div></div></div></div>

