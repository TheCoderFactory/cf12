<%= content_for :header, 'small-header' %>
 <div class="row">
  <div class="col-xs-12 col-lg-offset-2 col-lg-8">
    <h2>Anonymous Feedback</h2>
    <div class="panel panel-default">
      <div class="panel-body">
      <p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Location</th>
      <th>Satisfaction</th>
      <th>Recommend</th>
      <th>Another</th>
      <th>Achieve</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedback_forms.each do |feedback_form| %>
      <tr>
        <td><%= Shoppe::Product.find(feedback_form.course_id).name %></td>
        <td><%= Shoppe::Location.find(feedback_form.location_id).name %></td>
        <td><%= feedback_form.satisfaction %></td>
        <td><%= feedback_form.recommend %></td>
        <td><%= feedback_form.another %></td>
        <td><%= feedback_form.achieve %></td>
        <td><%= feedback_form.value %></td>
        <td><%= link_to 'Show', feedback_form %></td>
        <td><%= link_to 'Edit', edit_feedback_form_path(feedback_form) %></td>
        <td><%= link_to 'Destroy', feedback_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback form', new_feedback_form_path %>
