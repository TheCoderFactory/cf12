 <%= content_for :header, 'small-header' %>
 <div class="row">
  <div class="col-xs-12 col-lg-offset-2 col-lg-8">
    <h2>Anonymous Feedback</h2>
    <div class="panel panel-default">
    	<div class="panel-body">
            <% if @feedback_form.satisfaction.nil? %>
    		  <p>Satisfaction</p>
                <div class="row">
                  <% 10.each_with_index do |count, index| %>
                    
                      <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <%= link_to satisfaction_feedback_path(score: index + 1) do %>
                                <img src="<%= asset_path 'grin.png' %>" alt="Choose <%= (index + 1).to_s %>">
                            <% end %>
                          <div class="caption">
                            <h3><%= index + 1 %></h3>
                            
                          </div>
                        </div>
                      </div>
                    <% end %>
            <% end %>
    		</div>
       
    	</div>
    </div>
  </div>
</div>
