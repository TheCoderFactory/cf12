<%= simple_form_for(@author) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :profile_picture %>
    <%= f.input :slug %>
    <%= f.input :google_plus %>
    <%= f.input :linkedin %>
    <%= f.input :twitter %>
    <%= f.input :github %>
    <%= f.input :website %>
    <%= f.input :title %>
    <%= f.input :info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
