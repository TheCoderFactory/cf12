<div class="ct-mediaSection ct-u-bgBlack ct-u-bgdark-lightfont overflowHidden" data-stellar-background-ratio="0.2" data-height="300" data-type="parallax" data-bg-image="" data-bg-image-mobile="">
    <div class="ct-mediaSection-inner">
        <div class="container">
            <h1 class="ct-breadcrumbHeader text-uppercase pull-left">Enrolments</h1>
        </div><!-- /container -->
    </div><!-- /ct-mediaSection-inner -->
</div>

<div class="ct-u-bgLightGrey ct-u-paddingBoth60 ct-u-bgGrey">
  <div class="container">
    <div class="ct-singleCourse">
      <div class="ct-singleCourse-intro ct-u-bgWhite">
 			<h2>Enrolments</h2>
      <table class="table">
      	<tr>
      		<th>Course name</th>
      		<th>Date</th>
      		<th>City</th>
      		<th>Enrolments</th>
      	</tr>
				<% @future_courses.each do |future_course| %>
					<% if future_course.variant? %>
						<tr>
							<td><%= link_to future_course.parent.name, enrolment_path(future_course) %></td>
							<td><%= future_course.start_date.strftime('%d/%m/%y') if future_course.start_date %></td>
							<td><%= future_course.location.city if future_course.location %></td>
							<td><%= future_course.orders.ordered.received.count %></td>
						</tr>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>

