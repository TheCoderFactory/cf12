<%= simple_form_for(@scholarship) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :scholarship_type, collection: ['Change Champion', 'Change Maker', 'Change Supporter'] %>
    <%= f.input :company %>
    <%= f.input :website %>
    <%= f.input :logo %>
    <%= f.input :available %>
    <%= f.input :description %>
    <%= f.input :close_date %>
    <%= f.input :announce_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
