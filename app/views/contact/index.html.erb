<%= content_for :title, 'Contact Coder Factory' %>
<%= content_for :description, "Get in touch anyway you can. We're friendly and want to help!" %>
<div class="ct-mediaSection ct-u-bgBlack ct-u-bgdark-lightfont overflowHidden" data-stellar-background-ratio="0.2" data-height="400" data-type="parallax" data-bg-image="<%= asset_path 'cube.jpg' %>" data-bg-image-mobile="<%= asset_path 'cube.jpg' %>">
        <div class="ct-mediaSection-inner">
            <div class="container">
                <h1 class="ct-breadcrumbHeader text-uppercase pull-left">Contact Coder Factory</h1>
            </div><!-- /container -->
        </div><!-- /ct-mediaSection-inner -->
    </div>

    <div class="ct-u-bgGrey  ct-u-paddingTop70 ct-u-paddingBottom70 ">
        <div class="container">

          <header class="ct-sec-header text-center ct-u-paddingBottom50">
              <h2 class="ct-sec-header-title">Coder Factory</h2>
              <!-- <div class="row">
