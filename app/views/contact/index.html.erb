          </header>

          <div class="row ct-contactContent">
            <div class="col-sm-8">
                <div class="successMessage alert alert-success" style="display: none">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Thank You!
                </div>
                <div class="errorMessage alert alert-danger" style="display: none">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Ups! An error occured. Please try again later.
                </div>
                <%= simple_form_for(@enquiry, html: {class: "ct-form--white ct-form--bigInput validateIt" }) do |f| %>
                  <%= f.error_notification %>
                  <%= f.invisible_captcha :subtitle %>
              <!-- <form class="ct-form--white ct-form--bigInput validateIt" role="form" method="post" data-email-subject="Contact Form" data-show-errors="true" data-hide-form="true" action="assets/form/send.php"> -->
                  <!-- <div class="form-group">
                    <input type="text" class="form-control" id="exampleInputText"  name="field[]" required placeholder="Your Name">
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control" id="exampleInputEmail1"  name="field[]" required placeholder="Your Email">
                  </div>

                <div class="form-group">
                  <textarea class="form-control" rows="6"   name="field[]" placeholder="Your Message"></textarea>
                </div> -->
                <%= f.input :name, label: false, placeholder: 'Your name' %>
                <%= f.input :email, label: false, placeholder: 'Your email' %>
                <%= f.input :content, label: false, placeholder: 'Your message', input_html: { rows: 6 } %>
                <%= f.submit 'Send your message', class: 'btn btn-primary' %>
              <% end %>

            </div>
            <div class="col-sm-4">
                <div class="ct-address">
                  <h4 class="ct-widget-title ct-adress-title">Get in touch</h4>
                   <p class="ct-widget-adress ct-adress-content">Coder Factory HQ<br>7 Hudson Street<br>Redfern NSW 2016<br /><br />
                     Phone: 1300 884 095 <br>
                     Email: <a href="mailto:info@thecoderfactory.com">info@thecoderfactory.com</a>
                   </p>
                </div>
                <ul class="ct-socialIcons ct-socialIcons--fgrey list-inline list-unstyled ct-u-paddingBoth15">
                    <li><a href="https://www.facebook.com/thecoderfactory" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="https://twitter.com/coderfactory" target="_blank"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="https://www.linkedin.com/company/the-coder-factory" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                    <li><a href="https://www.youtube.com/user/CoderFactory/videos" target="_blank"><i class="fa fa-youtube"></i></a></li>
                </ul>

            </div>
          </div>

        </div><!-- /container -->
    </div>


    <div class="ct-mediaSection">
      <div class="ct-mediaSection-inner">
        <div class="googlemapcontainer">
           <div class="ct-googleMap" data-location="Australia" data-height="500" data-offset="0" data-zoom="16">
