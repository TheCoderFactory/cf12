<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %><br>
    <%= f.association :post_category %><br>
    <%= f.association :author %><br>
    <%= f.input :lead %><br>
    <%= f.input :content, input_html: { class: 'ckeditor', rows: 10 } %><br>
    <%= f.input :image %><br>
    <%= f.input :tag_list %><br>
    <%= f.input :slug %><br>
    <%= f.input :publish %><br>
    <%= f.input :published_date %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-block btn-block-dirtygold' %>
  </div>
<% end %>
<script>
   $('.ckeditor').ckeditor({
      // optional config
   });
</script>