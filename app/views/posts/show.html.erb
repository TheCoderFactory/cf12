 <%= content_for :title, @post.title + ' [@CoderFactory Blog]' %>
<%= content_for :description, @post.title + ': ' + @post.lead %>
<%= content_for :image, @post.image %>
<%= content_for :tagline, @post.published_date.strftime('%d %B %Y') %>
<% active_nav_item :blog %>
<%= content_for :header, 'small-header' %>


<div class="ct-mediaSection ct-u-bgBlack ct-u-bgdark-lightfont overflowHidden" data-stellar-background-ratio="0.2" data-height="400" data-type="parallax" data-bg-image="<%= asset_path 'slider4.jpg' %>" data-bg-image-mobile="<%= asset_path 'slider4.jpg' %>">
    <div class="ct-mediaSection-inner">
        <div class="container">
            <h3 class="ct-breadcrumbHeader text-uppercase pull-left">Article</h3>
        </div><!-- /container -->
    </div><!-- /ct-mediaSection-inner -->
</div>

    <div class="ct-u-bgLightGrey">
           <div class="container">
               <div class="row">

                 <div class="col-md-9 ct-colContent ct-u-paddingBoth60">



                   <div class="ct-singleArticleMeta">
                     <div class="entry-meta clearfix">
                         <span class="cat-links pull-left"><i class="fa fa-<%= @post.post_category.icon if @post.post_category %>"></i><a href="<%= blog_filter_path(post_category: @post.post_category) %>"><%= @post.post_category.name if @post.post_category %></a></span>
                         <span class="entry-date pull-right"><%= @post.published_date.strftime('%e %B, %Y') %></span>
                     </div>
                   </div>

                   <div class="ct-singleArticleContent ct-u-paddingBottom40">

                       <img src="<%= asset_path @post.image %>" alt="Image for <%= @post.title %>" />

                       <h2 class="text-uppercase ct-u-paddingBottom10"><%= link_to @post.title, @post %></h2>
                       
                       <p class="ct-p-introBlog"><%= @post.lead %></p>

                       <div id="content">
                         <%= @post.content.html_safe %>
                       </div>

                   </div>

                   <div class="by-author clearfix ct-u-paddingBottom10">
                     <span class="by-autor-prof">by </span><span class="by-autor-name"><%= @post.author.name %></span>
                    </div>

                   <div class="ct-articleAuthor clearfix">
                      <img src="<%= @post.author.profile_picture %>" alt="author image: <%= @post.author.name %>" class="pull-left"/>
                       <div class="ct-articleAuthor-text">
                           <p>
                             <%= @post.author.title %>
                           </p>
                           <p><%= @post.author.info %></p>
                           <p><%= @post.author.twitter %></p>
                       </div>
                   </div>
                   <br>
                   <div class="addthis_sharing_toolbox"></div>
                   <br>
                   <!-- <div class="ct-PrevNext clearfix">
                     <a href="#" class="btn btn-default btn-icon-left btn-sm ct-btn-whiteBg  pull-left"><i class="fa fa-angle-left"></i> Previous post </a>
                     <a href="#" class="btn btn-default btn-icon-right btn-sm  ct-btn-whiteBg  pull-right">Next post<i class="fa fa-angle-right"></i></a>
                   </div> -->

                </div><!-- /col-md-9 -->


<%= render 'layouts/blog_sidebar' %>


    
