                     <aside class="ct-widget ct-widget-sidebar">
                       <h4 class="ct-widget-title">Popular articles</h4>
                       <% @popular_posts.each do |popular_post| %>
                         <article class="blog-item ct-blogItem--sidebar">
                           <div class="media stdbox">
                               <a class="pull-left blog-item-cont" href="<%= post_path(popular_post) %>">
                                   <img class="media-object" src="<%= asset_path popular_post.image %>" alt=" ">
                               </a>
                               <div class="media-body">
                                 <p class="entry-text"><a href="/<%= popular_post.slug %>" title="<%= popular_post.title %>"><%= popular_post.title %></a></p>
                                 <div class="entry-meta">
                                    <span class="entry-date"><%= popular_post.published_date.strftime('%e %B, %Y') %></span>
                                 </div>
                               </div>
                           </div><!-- /media stdbox -->
                       </article>
                      <% end %>

                        

                     </aside>


                     <aside class="ct-widget ct-widget-sidebar">
                       <h4 class="ct-widget-title">Categories</h4>
                       <ul>
                        <% @post_categories.each do |post_category| %>
                           <li><span style="color:#3498DB"><i class="fa fa-<%= post_category.icon %>"></i></span> &nbsp;<%= link_to post_category.name, blog_filter_path(post_category: post_category) %></li>
                        <% end %>
                       </ul>
                     </aside>

                     <aside class="ct-widget ct-widget-sidebar">
                        <h4 class="ct-widget-title">Tags</h4>
                        <ul>
                          <% @tags.each do |tag| %>
                            <li><%= link_to blog_filter_path(tag: tag.name) do %><%= tag %> <span class="badge pull-right"><%= tag.taggings_count %></span><% end %></li>
                          <% end %>
                        </ul>
                      </aside>

                   </div>

                 </div><!-- /col-md-3 -->

               </div><!-- /row -->
           </div><!-- /container -->
     </div>